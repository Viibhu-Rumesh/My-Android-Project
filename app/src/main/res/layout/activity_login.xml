<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:gravity="top"
        android:background="@color/black">

        <EditText
            android:id="@+id/Login_UserName_EditText"
            android:autofillHints="Username"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/username"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75sp">
        </EditText>

        <EditText
            android:id="@+id/Login_Password_EditText"
            android:autofillHints="Password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Login_UserName_EditText"
            android:layout_marginTop="25sp">
        </EditText>

        <EditText
            android:id="@+id/Login_PhoneNumber_EditText"
            android:autofillHints="Phone Number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/phone_number"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Login_Password_EditText"
            android:layout_marginTop="25sp">
        </EditText>

        <Button
            android:id="@+id/Login_LoginButton_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Login_PhoneNumber_EditText"
            android:layout_marginTop="50sp"
            android:textSize="25dp">
        </Button>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>